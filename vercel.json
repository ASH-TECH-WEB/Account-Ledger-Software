{
  "version": 2,
  "builds": [
    {
      "src": "minimal-server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "memory": 1024,
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/dashboard/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=300, stale-while-revalidate=600",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY"
      }
    },
    {
      "src": "/api/parties/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=120, stale-while-revalidate=300",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api/party-ledger/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=120, stale-while-revalidate=300",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api/final-trial-balance/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=300, stale-while-revalidate=600",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api/settings/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=300, stale-while-revalidate=600",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "s-maxage=60, stale-while-revalidate=120",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/health",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/api/health",
      "dest": "/minimal-server.js",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
