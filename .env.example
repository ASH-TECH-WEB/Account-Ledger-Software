# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
POSTGRES_URL=your-postgres-connection-string

# MongoDB Configuration (Legacy - will be removed)
MONGODB_URI=your-mongodb-connection-string

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10000

# ðŸš€ PERFORMANCE OPTIMIZATION SETTINGS
# Database Connection Pooling
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=60000

# Compression Settings
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Response Optimization
RESPONSE_CACHE_MAX_AGE=300
RESPONSE_COMPRESSION=true

# Database Query Optimization
DB_QUERY_TIMEOUT=10000
DB_MAX_CONCURRENT_QUERIES=50

# API Response Optimization
API_RESPONSE_LIMIT=1000
API_TIMEOUT=30000

# Frontend Performance
FRONTEND_BUNDLE_ANALYSIS=true
FRONTEND_CODE_SPLITTING=true
FRONTEND_LAZY_LOADING=true
